# Ilenia Production Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# HuggingFace Services (REQUIRED for live-service)
# =============================================================================
HF_ASR_URL=https://your-asr-endpoint.hf.space
HF_ASR_TOKEN=hf_your_token_here
HF_MT_URL=https://your-mt-endpoint.hf.space
HF_MT_TOKEN=hf_your_token_here

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# VAD Configuration (Optional - defaults shown)
# =============================================================================
ASR_RMS_SPEECH_THRESHOLD=0.003
ASR_MIN_SPEECH_DURATION_MS=300
ASR_MIN_SILENCE_DURATION_MS=500
ASR_SPEECH_PAD_MS=400

# =============================================================================
# Auth Service (REQUIRED)
# =============================================================================
# JWT/Auth configuration
AUTH_ISSUER=http://127.0.0.1:8081
ACCESS_TTL_SECONDS=3600

# Admin seed user (created on first startup)
AUTH_SEED_ADMIN_EMAIL=admin@ilenia.com
AUTH_SEED_ADMIN_PASSWORD=123456
AUTH_SEED_ADMIN_NAME=DefaultAdmin
AUTH_SEED_ADMIN_LANG=en

# Database (optional - uses SQLite by default)
# AUTH_DATABASE_URL=postgresql://user:password@host:5432/dbname
